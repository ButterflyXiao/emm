<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.icss.oa.meeting.dao.MeetingMapper">
	
	
	<resultMap id="BaseResultMap" type="com.icss.oa.meeting.pojo.Meeting">
		<id column="mee_id" property="meeId" jdbcType="INTEGER" />
		<result column="mee_topic" property="meeTopic" jdbcType="VARCHAR" />
		<result column="mee_approval_status" property="meeApprovalStatus" jdbcType="VARCHAR" />
		<result column="mee_record" property="meeRecord" jdbcType="VARCHAR" />
		<result column="mee_start_time" property="meeStartTime" jdbcType="DATE" />
		<result column="mee_duration" property="meeDuration" jdbcType="INTEGER" />
		
		<association property="meetingRoom" javaType="com.icss.oa.meeting.pojo.MeetingRoom">
			<id column="room_id" property="roomId" jdbcType="INTEGER" />
			<result column="room_place" property="roomPlace" jdbcType="VARCHAR" />
			<result column="is_reservation" property="isReservation" jdbcType="TINYINT" />
		</association>
		<association property="sponsor" javaType="com.icss.oa.system.pojo.Employee">
			<id column="emp_id" property="empId" jdbcType="INTEGER" />
			<result column="emp_name" property="empName" jdbcType="VARCHAR" />
			
		</association>
	</resultMap>

	<insert id="insert" parameterType="com.icss.oa.meeting.pojo.Meeting">
		insert into meeting values
		(default,#{meeTopic},#{meeApprovalStatus},#{meeRecord},#{meetingRoom.roomId},#{sponsor.empId},#{meeStartTime},#{meeDuration})
	</insert>

	<update id="update" parameterType="com.icss.oa.meeting.pojo.Meeting">
		update meeting set
		mee_topic=#{meeTopic},mee_approval_status=#{meeApprovalStatus},mee_record=#{meeRecord},mee_room_id=#{meetingRoom.roomId},mee_sponsor_id=#{sponsor.empId},mee_start_time=#{meeStartTime},mee_duration=#{meeDuration}
		where mee_id=#{meeId}
	</update>

	<delete id="delete" parameterType="java.lang.Integer">
		delete from meeting where
		mee_id=#{meeId}
	</delete>
	

	<select id="queryById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
		SELECT m.*,m.`mee_room_id` room_id,m.`mee_sponsor_id` emp_id 
		from meeting m
		where mee_id=#{meeId}
	</select>
	
	<select id="query" resultMap="BaseResultMap">
		SELECT m.*,m.`mee_room_id` room_id,m.`mee_sponsor_id` emp_id 
		from meeting m
		order by mee_id
	</select> 
	
	<select id="queryByPage" resultMap="BaseResultMap">
		SELECT m.`mee_id`,m.`mee_topic` ,m.`mee_approval_status`,m.`mee_record`,r.`room_place`,e.`emp_name`,m.`mee_start_time`,m.`mee_duration`
		from meeting m
		JOIN meeting_room r ON m.`mee_room_id`=r.`room_id`
		JOIN employee e ON m.`mee_sponsor_id`=e.`emp_id` 
		LIMIT #{start},#{pageSize}
	</select>
	
	<select id="queryByTopic" resultMap="BaseResultMap" parameterType="java.lang.String">
		select  *
		from	meeting
		where	mee_topic=#{meeTopic}
	</select>
	
	<select id="queryByCondition" resultMap="BaseResultMap">
		SELECT m.`mee_id`,m.`mee_topic` ,m.`mee_approval_status`,m.`mee_record`,r.`room_place`,e.`emp_name`
		from meeting m
		JOIN meeting_room r ON m.`mee_room_id`=r.`room_id`
		JOIN employee e ON m.`mee_sponsor_id`=e.`emp_id` 
		<where>
			<if test="roomId != null">
				and mee_room_id=#{roomId,jdbcType=INTEGER}
			</if>
			<if test="empId != null">
				and mee_sponsor_id=#{empId,jdbcType=INTEGER}
			</if>
			<if test="meeTopic != null and meeTopic != '' ">
				and mee_topic=#{meeTopic,jdbcType=VARCHAR}
			</if>
			<if test="meeApprovalStatus != null and meeApprovalStatus != '' ">
				and mee_approval_status=#{meeApprovalStatus,jdbcType=VARCHAR}
			</if>
			<if test="meeStartTime != null and meeStartTime != '' ">
				and mee_start_time=#{meeStartTime,jdbcType=DATE}
			</if>
		</where>
		LIMIT #{start},#{pageSize}				
	</select>
	
	<select id="getCountByCondition" resultType="java.lang.Integer">
		select count(*) from meeting
		<where>
			<if test="roomId != null">
				and mee_room_id=#{roomId,jdbcType=INTEGER}
			</if>
			<if test="empId != null">
				and mee_sponsor_id=#{empId,jdbcType=INTEGER}
			</if>
			<if test="meeTopic != null and meeTopic != '' ">
				and mee_topic=#{meeTopic,jdbcType=VARCHAR}
			</if>
			<if test="meeApprovalStatus != null and meeApprovalStatus != '' ">
				and mee_approval_status=#{meeApprovalStatus,jdbcType=VARCHAR}
			</if>
			<if test="meeStartTime != null and meeStartTime != '' ">
				and mee_start_time=#{meeStartTime,jdbcType=DATE}
			</if>
		</where>
	</select>
</mapper>